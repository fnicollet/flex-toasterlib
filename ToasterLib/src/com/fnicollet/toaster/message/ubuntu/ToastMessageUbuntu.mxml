<?xml version="1.0" encoding="utf-8"?>
<ToastMessageBase xmlns="com.fnicollet.toaster.message.*"
                  xmlns:fx="http://ns.adobe.com/mxml/2009" 
                  xmlns:s="library://ns.adobe.com/flex/spark" 
                  xmlns:mx="library://ns.adobe.com/flex/mx"
                  width="245" height="90"
                  filters="{[new spark.filters.GlowFilter(0, .5, 8,8,1)]}" cornerRadius="10"
                  backgroundAlpha="0.5" backgroundColor="black" borderStyle="solid">
  <layout>
    <s:LayoutBase />
  </layout>
  <fx:Script>
    <![CDATA[
      import spark.filters.GlowFilter;
      import mx.effects.Glow;
      [Bindable]
      private var _sampleCaption:String = null;

      public function get sampleCaption():String {
        return _sampleCaption;
      }

      public function set sampleCaption(value:String):void {
        _sampleCaption = value;
      }
      [Bindable]
      private var _imageSource:String = null;

      public function get imageSource():String {
        return _imageSource;
      }

      public function set imageSource(value:String):void {
        _imageSource = value;
      }
    ]]>
  </fx:Script>
    <s:Group width="100%" height="100%">
       <s:layout>
         <s:HorizontalLayout paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10" />
       </s:layout>
      <mx:Image id="iconImage" height="45" width="45" maintainAspectRatio="true" source="{_imageSource}" 
                x="20" y="20"/>
      <mx:Text id="caption" fontWeight="bold" fontSize="14" x="80" y="15" text="{_sampleCaption}"
               width="140" fontFamily="Arial" selectable="false" color="white" height="80"/>
    </s:Group>


</ToastMessageBase>
